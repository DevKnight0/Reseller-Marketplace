<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".SellFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/purpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Purpose"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/purpose_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/purpose"
            android:text="@string/intro"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/purpose_text"
            android:layout_marginTop="30dp"
            android:paddingLeft="5dp"
            android:text="@string/our_team"
            android:textSize="30dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/akshat_text"
            android:layout_width="347dp"
            android:layout_height="139dp"
            android:layout_below="@+id/de_image"
            android:layout_alignStart="@+id/de_image"
            android:layout_alignEnd="@+id/de_image"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="-17dp"
            android:text="@string/k"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/de_image"
            android:layout_width="302dp"
            android:layout_height="241dp"
            android:layout_below="@+id/team"
            android:layout_alignEnd="@+id/team"
            android:layout_alignParentStart="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="41dp"
            android:background="@drawable/p1" />
    </RelativeLayout>
</ScrollView>